# Используем официальный образ Golang в качестве базового
FROM golang:latest

# Устанавливаем рабочую директорию в /app
WORKDIR /app

# Копируем исходный код в текущую директорию
COPY . .

# Инициализируем модуль и скачиваем зависимости
RUN go mod init first
RUN go mod download

# Собираем исполняемый файл из исходного кода
RUN go build -o main .

# Определяем команду по умолчанию для запуска вашего приложения
CMD ["./main"]
